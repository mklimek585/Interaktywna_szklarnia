<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme_Dark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Użyj kolorów, które są odpowiednie dla trybu ciemnego -->
        <item name="colorPrimary">@color/dark_onPrimary</item> <!-- Podswietlenie bottom nav bara -->
        <item name="colorPrimaryVariant">@color/dark_primaryDark</item> <!-- IDK -->
        <item name="colorOnPrimary">@color/dark_onPrimary</item> <!-- Kolor napisu w buttonie ale innych tekstow nie -->

        <item name="colorSecondary">@color/teal_up</item> <!-- Podswietlenie radio button i switchy -->
        <item name="colorSecondaryVariant">@color/dark_secondaryDark</item> <!-- IDK -->
        <item name="colorOnSecondary">@color/dark_onSecondary</item> <!-- IDK -->

        <item name="colorBackground">@color/dark_background</item> <!-- Kolor bottom nav bara -->
        <item name="colorOnBackground">@color/dark_onBackground</item> <!-- IDK -->

        <item name="colorSurface">@color/dark_surface</item> <!-- Kolor kolek w radioButton -->
        <item name="colorOnSurface">@color/dark_onSurface</item> <!-- Kolor niekliknietych bottom nav bar -->

        <item name="colorError">@color/dark_error</item>
        <item name="colorOnError">@color/dark_onError</item>

        <!-- Ustawienia dla status bar, navigation bar, i innych systemowych komponentów -->
        <item name="android:statusBarColor">@color/dark_1</item> <!-- Gorny pasek nad apka xpp -->
        <item name="android:navigationBarColor">@color/dark_background</item> <!-- dolny pasek pod bottom nav -->
        <item name="android:windowBackground">@color/dark_1</item>  <!--Zmiana koloru tla!!! -->

        <!-- Ustawienia tekstu, ikon i innych elementów UI -->
        <item name="android:textColor">@color/dark_onBackground</item> <!-- Kolor textViews -->
        <item name="android:windowLightStatusBar">false</item> <!-- jasne ikony na status bar dla lepszej widoczności -->

        <!-- Ogole -->
        <item name="customBackgroundColor">@color/grey_5</item> <!-- Kolor tla layoutow we fragmentach -->
        <item name="customBoardersOfLayouts">@color/grey_3</item> <!-- Obramowki dla layoutow -->

        <item name="buttonColor">@color/dark_3</item> <!-- Kolor przyciskow -->
        <item name="buttonTextColor">@color/white</item> <!-- Kolor tekstow przyciskow w dashboradzie -->

        <!-- Wykresy -->
        <item name="statsAxisColor">@color/white</item> <!-- Kolor osi wykresow -->
        <item name="statsTextColor">@color/white</item> <!-- Podpisy wartosci osi -->

    </style>


    <style name="Theme_Light" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryVariant">#7dae81</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#2c872f</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="colorBackground">@color/dark_onBackground</item>
        <item name="colorOnBackground">@color/dark_onBackground</item>

        <!-- Ustawienia dla status bar, navigation bar, i innych systemowych komponentów -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item> <!-- Gorny pasek nad apka xpp -->
        <item name="android:navigationBarColor">@color/dark_background</item> <!-- dolny pasek pod bottom nav -->
        <item name="android:windowBackground">@color/green_basic</item>  <!--Zmiana koloru tla!!! -->
        <!-- Customize your theme here. -->
        <item name="customBackgroundColor">@color/green_basic_layouts</item> <!-- Kolor tla layoutow we fragmentach -->
        <item name="customBoardersOfLayouts">@color/boarders_of_layouts</item> <!-- Obramowki dla layoutow -->
        <item name="buttonColor">@color/button_light</item> <!-- Kolor przyciskow -->
        <item name="buttonTextColor">@color/black</item> <!-- Kolor tekstow przyciskow w dashboradzie -->
        <item name="titleColor">@color/green</item> <!-- Kolor tytulow w settings -->

        <!-- Wykresy -->
        <item name="statsAxisColor">@color/black</item> <!-- Kolor osi wykresow -->
        <item name="statsTextColor">@color/black</item> <!-- Podpisy wartosci osi -->

    </style>


    <style name="CustomPopupMenu" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/dark_1</item>
    </style>



</resources>